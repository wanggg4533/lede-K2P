CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7621=y
CONFIG_TARGET_ramips_mt7621_DEVICE_phicomm_k2p=y

# IPv6 support
CONFIG_PACKAGE_ipv6helper=y

# Luci base and themes
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-ssl-openssl=y
CONFIG_PACKAGE_luci-theme-bootstrap=y
CONFIG_PACKAGE_luci-theme-material=y
CONFIG_PACKAGE_luci-theme-argon=y

# Basic system tools
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_vim-fuller=y
CONFIG_PACKAGE_curl=y

# SSH support
CONFIG_PACKAGE_dropbear=y
CONFIG_DROPBEAR_ECC=y

# DDNS (China friendly)
CONFIG_PACKAGE_ddns-scripts=y
CONFIG_PACKAGE_ddns-scripts_aliyun=y
CONFIG_PACKAGE_ddns-scripts_dnspod=y
CONFIG_PACKAGE_luci-app-ddns=y

# WebDAV support
CONFIG_PACKAGE_luci-app-webdav=y
CONFIG_PACKAGE_webdav=y

# Clash (with VLESS/SOCKS via Meta)
CONFIG_PACKAGE_luci-app-openclash=y
CONFIG_PACKAGE_luci-i18n-openclash-zh-cn=y

# MWAN3 and Load Balancing
CONFIG_PACKAGE_luci-app-mwan3=y
CONFIG_PACKAGE_mwan3=y

# Network & diagnostics
CONFIG_PACKAGE_ip-full=y
CONFIG_PACKAGE_iptables=y
CONFIG_PACKAGE_iptables-mod-fullconenat=y
CONFIG_PACKAGE_tc=y

# Kernel modules for Clash
CONFIG_PACKAGE_kmod-tun=y
CONFIG_PACKAGE_kmod-inet-diag=y

# Enable file system and USB (optional for WebDAV)
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-fs-vfat=y
CONFIG_PACKAGE_kmod-usb-storage=y

# Remove unnecessary build options for size optimization
CONFIG_DEVEL=n
CONFIG_BUILD_LOG=n
CONFIG_COLLECT_KERNEL_DEBUG=n
CONFIG_KERNEL_PRINTK=n
CONFIG_KERNEL_KALLSYMS=n
